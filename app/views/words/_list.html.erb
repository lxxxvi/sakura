<table>
  <thead>
    <tr>
      <th>Word</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% words.each do |word| %>
      <tr>
        <td><%= word.value %></td>
        <td><%= link_to "Show", word_path(word.language, word), class: "link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
